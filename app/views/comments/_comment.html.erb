<p><%= comment.user.name %> => <%= comment.text %></p>

<% if can?(:destroy, Comment) %>
  <%= button_to 'Delete This Comment', user_post_comment_path(user_id: comment.user_id, post_id: comment.post_id, id: comment.id), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
<% end %>
