<article style="display: flex; justify-content: space-between; border: 2px solid grey; padding: 4px;">

  <div>
    <%= link_to user_post_path(@user, post) do %>
    <h3>Post #<%= post.id %></h3>
    <% end %>

    <p><%= post.text %></p>
  </div>

  <div class="actions-container" style="display: flex; flex-direction:column; ">
    <p>
      <%= link_to "Comments: #{post.comments_counter}", user_post_path(post.author, post) %>
    </p>
    <p class="no-of-likes" style="margin-top: -5px;">Likes: <%= post.likes_counter %></p>
    <%= render partial: 'likes/like_form', locals: { post: post } %>
  </div>

</article>
